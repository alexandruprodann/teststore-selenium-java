<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Test Suite" parallel="methods" thread-count="6">

    <test name="PC Chrome">
        <parameter name="headless" value="true"/>
        <packages>
            <package name="Tests.Desktop.auth"/>
            <package name="Tests.Desktop.cart"/>
            <package name="Tests.Desktop.filter"/>
            <package name="Tests.Desktop.forms"/>
            <package name="Tests.Desktop.order"/>
            <package name="Tests.Desktop.product"/>
            <package name="Tests.Desktop.search"/>
            <package name="Tests.Desktop.sort"/>
            <package name="Tests.Desktop.user"/>
        </packages>
    </test>

    <test name="Mobile Chrome">
        <parameter name="headless" value="true"/>
        <packages>
            <package name="Tests.Desktop.auth"/>
            <package name="Tests.Desktop.cart"/>
            <package name="Tests.Desktop.filter"/>
            <package name="Tests.Desktop.forms"/>
            <package name="Tests.Desktop.order"/>
            <package name="Tests.Desktop.product"/>
            <package name="Tests.Desktop.search"/>
            <package name="Tests.Desktop.sort"/>
            <package name="Tests.Desktop.user"/>
        </packages>
    </test>

</suite>